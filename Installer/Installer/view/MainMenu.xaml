<UserControl x:Class="Installer.view.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             Height="350" Width="500">
    <Grid Background="#444444">
        
        <Grid>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="1"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.ColumnSpan="3" Grid.Row="1" Grid.Column="0" Background="#1DB954" Margin="15 0"/>
            <Label Grid.Row="0" Grid.Column="1" Background="#1DB954" Margin="0 15"/>

            <StackPanel Grid.Row="0" Grid.Column="2" Margin="30" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Configuración de instalación" FontSize="18" FontWeight="Bold" Margin="0 0 0 15" Foreground="#1DB954"/>
                <CheckBox Content="Eliminar anuncios" Margin="20 10 10 10" Foreground="WhiteSmoke" Background="#1DB954" IsChecked="true"/>
                <CheckBox Content="Descargar sin conexión" Margin="20 10 10 10" Foreground="WhiteSmoke" Background="#1DB954"/>
                <CheckBox Content="Audio de alta calidad (320 kbit/s)" Margin="20 10 10 10" Foreground="WhiteSmoke" Background="#1DB954" IsChecked="true"/>
                <CheckBox Content="Organizar cola de reproducción" Margin="20 10 10 10" Foreground="WhiteSmoke" Background="#1DB954"/>
                <CheckBox Content="Sin estricción de almacenamiento" Margin="20 10 10 10" Foreground="WhiteSmoke" Background="#1DB954"/>
            </StackPanel>

        </Grid>
        
    </Grid>
</UserControl>
