<UserControl x:Class="Installer.view.InstalationMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             Height="350" Width="500">
    <Grid Background="#444444">

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Padding="5" Foreground="#1DB954" x:Name="textBlockProgress" Text="Preparing the installation..."/>
            <ProgressBar Width="350" Height="15" Name="progressBarInsallation" Margin="5" Foreground="#1DB954"/>
        </StackPanel>
        
    </Grid>
</UserControl>
